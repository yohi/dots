{
    // エディタ設定
    "editor.fontSize": 14,
    "editor.fontFamily": "'Cica', 'Noto Sans CJK JP', monospace",
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.renderWhitespace": "boundary",
    "editor.wordWrap": "on",
    "editor.minimap.enabled": true,
    "editor.cursorBlinking": "phase",
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.rulers": [
        80,
        120
    ],
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": true,
    // ワークベンチ設定
    "workbench.colorTheme": "Default Dark+",
    "workbench.iconTheme": "vscode-icons",
    "workbench.startupEditor": "welcomePage",
    "workbench.editor.enablePreview": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    // エクスプローラー設定
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.compactFolders": false,
    // 検索設定
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true,
        "**/.git": true,
        "**/dist": true,
        "**/build": true,
        "**/.venv": true,
        "**/__pycache__": true,
        "**/*.pyc": true
    },
    // ファイル設定
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1000,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.encoding": "utf8",
    "files.eol": "\n",
    // ターミナル設定
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.fontFamily": "'Cica', 'Noto Sans Mono CJK JP', monospace",
    "terminal.integrated.defaultProfile.linux": "zsh",
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "line",
    // Git設定
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    "git.autofetch": true,
    "git.openRepositoryInParentFolders": "always",
    // Python設定
    "python.defaultInterpreterPath": "/usr/bin/python3",
    "python.linting.enabled": true,
    "python.linting.flake8Enabled": true,
    "python.linting.mypyEnabled": true,
    "python.linting.lintOnSave": true,
    "python.formatting.provider": "black",
    "python.formatting.blackArgs": [
        "--line-length",
        "88"
    ],
    // Django設定
    "python.linting.pylintArgs": [
        "--django-settings-module=myproject.settings"
    ],
    // JavaScript/TypeScript設定
    "javascript.updateImportsOnFileMove.enabled": "always",
    "typescript.updateImportsOnFileMove.enabled": "always",
    "javascript.preferences.quoteStyle": "single",
    "typescript.preferences.quoteStyle": "single",
    // Docker設定
    "docker.showStartPage": false,
    // 拡張機能設定
    "extensions.autoUpdate": false,
    "extensions.autoCheckUpdates": false,
    // Copilot設定
    "github.copilot.enable": {
        "*": true,
        "yaml": false,
        "plaintext": false
    },
    "github.copilot.chat.codeGeneration.instructions": [
        {
            "file": "~/.vscode/copilot-instructions/personas.md"
        },
        {
            "file": "~/.vscode/copilot-instructions/commands.md"
        },
        {
            "file": "~/.vscode/copilot-instructions/rules.md"
        }
    ],
    "github.copilot.chat.testGeneration.instructions": [
        {
            "text": "テスト生成時は@testerペルソナとして応答し、テストケースの網羅性を重視すること"
        }
    ],
    "github.copilot.chat.reviewSelection.instructions": [
        {
            "text": "コードレビュー時は@analystペルソナとして応答し、セキュリティリスクとパフォーマンス問題を優先して指摘すること"
        }
    ],
    "github.copilot.chat.commitMessageGeneration.instructions": [
        {
            "text": "コミットメッセージは日本語で、[種別] 内容 の形式で生成すること。種別は feat/fix/docs/style/refactor/test/chore のいずれか"
        }
    ],
    // 言語固有設定
    "[python]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        },
        "github.copilot.chat.codeGeneration.instructions": [
            {
                "text": "Pythonでは以下のルールを適用:\n- PEP 8に準拠\n- タイプヒントを必ず使用\n- docstringはGoogle形式"
            }
        ]
    },
    "[javascript]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.formatOnSave": true
    },
    "[typescript]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.formatOnSave": true,
        "github.copilot.chat.codeGeneration.instructions": [
            {
                "text": "TypeScriptでは以下のルールを適用:\n- privateプロパティには常に_プレフィックスを使用\n- interfaceには接頭辞Iを付けない\n- enumには接尾辞Enumを付ける"
            }
        ]
    },
    "[json]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.formatOnSave": true
    },
    "[yaml]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.formatOnSave": true
    },
    "[html]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.formatOnSave": true
    },
    "[css]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.formatOnSave": true
    },
    "[scss]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.formatOnSave": true
    },
    "[markdown]": {
        "editor.wordWrap": "on",
        "editor.quickSuggestions": {
            "comments": "off",
            "strings": "off",
            "other": "off"
        }
    },
    "database-client.autoSync": true,
    "yaml.schemas": {
        "file:///home/y_ohi/.vscode/extensions/atlassian.atlascode-3.8.3/resources/schemas/pipelines-schema.json": "bitbucket-pipelines.yml"
    },
    "github.copilot.chat.agent.thinkingTool": true,
    "chat.agent.maxRequests": 200,
    "diffEditor.maxComputationTime": 0,
    "chat.tools.autoApprove": true,
    "docker.extension.enableComposeLanguageServer": false,
    "mcpServers": {
        "skillport": {
            "command": "uvx",
            "args": [
                "skillport-mcp"
            ]
        }
    }
}
