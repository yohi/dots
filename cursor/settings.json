{
    // エディタ設定
    "editor.fontSize": 14,
    "editor.fontFamily": "'Cica Nerd Font', 'Noto Sans CJK JP', monospace",
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.renderWhitespace": "boundary",
    "editor.wordWrap": "on",
    "editor.minimap.enabled": true,
    "editor.cursorBlinking": "phase",
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.rulers": [
        80,
        120
    ],
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": true,
    "editor.unicodeHighlight.nonBasicASCII": false,
    // Cursor AI設定
    "cursor.general.enableChat": true,
    "cursor.general.enableComposer": true,
    "cursor.cpp.enableDocs": true,
    "cursor.cpp.enableDebugLog": false,
    "cursor-retrieval.canAttemptGithubLogin": false,
    "cursor.terminal.usePreviewBox": true,
    // ワークベンチ設定
    "workbench.colorTheme": "Red",
    "workbench.iconTheme": "vscode-icons",
    "workbench.startupEditor": "welcomePage",
    "workbench.editor.enablePreview": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.editor.editorActionsLocation": "titleBar",
    "workbench.activityBar.orientation": "vertical",
    "window.customTitleBarVisibility": "auto",
    // エクスプローラー設定
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.compactFolders": false,
    // 検索設定
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true,
        "**/.git": true,
        "**/dist": true,
        "**/build": true,
        "**/.venv": true,
        "**/__pycache__": true,
        "**/*.pyc": true,
        "**/.cursor": true
    },
    // ファイル設定
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1000,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.encoding": "utf8",
    "files.eol": "\n",
    // ターミナル設定
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.fontFamily": "'Cica Nerd Font', 'Noto Sans Mono CJK JP', monospace",
    "terminal.integrated.defaultProfile.linux": "zsh",
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "line",
    // Git設定
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    "git.autofetch": true,
    "git.openRepositoryInParentFolders": "never",
    // Python設定
    "python.defaultInterpreterPath": "/usr/bin/python3",
    "python.linting.enabled": true,
    "python.linting.flake8Enabled": true,
    "python.linting.mypyEnabled": true,
    "python.linting.lintOnSave": true,
    "python.formatting.provider": "black",
    "python.formatting.blackArgs": [
        "--line-length",
        "88"
    ],
    // Django設定
    "python.linting.pylintArgs": [
        "--django-settings-module=myproject.settings"
    ],
    // JavaScript/TypeScript設定
    "javascript.updateImportsOnFileMove.enabled": "always",
    "typescript.updateImportsOnFileMove.enabled": "always",
    "javascript.preferences.quoteStyle": "single",
    "typescript.preferences.quoteStyle": "single",
    // Docker設定
    "docker.showStartPage": false,
    // 拡張機能設定
    "extensions.autoUpdate": false,
    "extensions.autoCheckUpdates": false,
    // プライバシー設定
    "telemetry.telemetryLevel": "off",
    "cursor.general.allowAnonymousAnalytics": false,
    // 更新設定
    "update.releaseTrack": "prerelease",
    // 言語固有設定
    "[python]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        }
    },
    "[javascript]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.formatOnSave": true
    },
    "[typescript]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.formatOnSave": true
    },
    "[json]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.formatOnSave": true
    },
    "[yaml]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.formatOnSave": true
    },
    "[html]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.formatOnSave": true
    },
    "[css]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.formatOnSave": true
    },
    "[scss]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.formatOnSave": true
    },
    "[markdown]": {
        "editor.wordWrap": "on",
        "editor.quickSuggestions": {
            "comments": "off",
            "strings": "off",
            "other": "off"
        }
    },
    "database-client.autoSync": true,
    "yaml.schemas": {
        "file:///home/y_ohi/.cursor/extensions/atlassian.atlascode-3.8.3/resources/schemas/pipelines-schema.json": "bitbucket-pipelines.yml"
    }
}
