{
  // スキーマ定義：エディタでの補完とバリデーションを有効化 
  "$schema": "https://raw.githubusercontent.com/code-yeongyu/oh-my-opencode/master/assets/oh-my-opencode.schema.json",

  // ================================================================================
  // グローバル設定 (Global Configuration)
  // ================================================================================

  // [変更点] google_auth はスキーマから削除されました。
  // opencode-antigravity-auth プラグインを使用する場合は、プラグイン側の設定に従ってください。

  // パフォーマンスと安定性のための最適化設定
  // 起動時の不要な通知を抑制し、特定のMCPサーバーを無効化してリソースを節約
  "disabled_hooks": [
    "startup-toast" 
  ],
  "disabled_mcps": [
  ], 

  // ================================================================================
  // エージェント構成 (Agents Configuration)
  // 各エージェントの役割に最適なモデルを割り当てる "Best-of-Breed" 戦略
  // ================================================================================
  "agents": {
    // --------------------------------------------------------------------------
    // 1. 指揮・計画レイヤー (Orchestration & Planning Layer)
    // --------------------------------------------------------------------------

    // [Orchestrator] プロジェクト全体の指揮官
    // 推奨: Claude Opus 4.5
    // 次点: Gemini 3 Pro
    // 理由: 複雑なコンテキストの保持と、長期的なタスク管理能力において最高性能を誇る 
    "orchestrator-sisyphus": {
      "model": "google/antigravity-claude-opus-4-5-thinking",
      // "model": "google/antigravity-gemini-3-pro",
      "temperature": 0.5,
      "description": "プロジェクト全体を統括するリーダー。タスク分解、委譲、進捗管理を担当。"
    },

    // [Planner] 戦略立案担当 (Prometheus)
    // 推奨: Claude Opus 4.5 (Thinking Mode)
    // 次点: GPT-5.2 (High Reasoning)
    // 理由: Work-Planner方法論に基づき、詳細かつ実行可能な計画を策定する [2, 6]
    "Prometheus (Planner)": {
      "model": "google/antigravity-claude-opus-4-5-thinking",
      // "category": "ultrabrain",
      "variant": "high", // 推論強度を最大化し、深い思考を行わせる
      "temperature": 0.3,
      "description": "実装前の詳細な計画策定を担当。依存関係の解決とリスク予測を行う。"
    },

    // [Consultant] 計画の事前監査 (Metis)
    // 推奨: GPT-5.2 (High Reasoning)
    // 次点: Gemini 3 Pro -> Plannerを次点にした場合、監査役はGoogleの最高峰モデルでクロスチェックを行う
    // 理由: Planner (Claude) とは異なるアーキテクチャ (GPT) でダブルチェックを行い、死角をなくす 
    "Metis (Plan Consultant)": {
      "category": "ultrabrain",
      // "model": "google/antigravity-gemini-3-pro",
      "variant": "high",
      "temperature": 0.3,
      "description": "計画に対する批判的分析、隠れた要件の抽出、リスク評価を担当。"
    },

    // --------------------------------------------------------------------------
    // 2. 実行レイヤー (Execution Layer)
    // --------------------------------------------------------------------------

    // [General Executor] 汎用実行エージェント (Sisyphus)
    // 推奨: Claude Sonnet 4.5
    // 次点: GPT-5.2 Codex
    // 理由: コストと速度のバランスが良く、日常的なコード修正や実装に最適
    "Sisyphus": {
      "model": "google/antigravity-claude-sonnet-4-5",
      // "model": "openai/gpt-5.2-codex",
      "temperature": 0.5
    },

    // [Execution Sub-agent] 実装特化の実行部隊
    // 推奨: Claude Sonnet 4.5
    // 次点: Gemini 3 Pro -> 親エージェント（Sisyphus）を次点にした場合、サブエージェントはGoogleに分散させAPIレート制限のリスクを低減
    // Orchestratorが「実装タスク」を切り出して委譲する際の相手。
    // 自身では他のエージェントを呼び出さず、ひたすらコーディングを行う。
    "Sisyphus-Junior": {
      "model": "google/antigravity-claude-sonnet-4-5", // コスト効率と速度の良いSonnetを推奨
      // "model": "google/antigravity-gemini-3-pro",
      "temperature": 0.1, // 指示通りに正確に動くよう、温度は低めに設定
      "description": "Orchestratorから委譲されるタスクを実行する実務担当。実装のみに集中する。"
    },

    // [Frontend Engineer] UI/UX特化
    // 推奨: Gemini 3 Pro (Antigravity)
    // 理由: マルチモーダル能力が高く、デザイン画や画面遷移の理解に優れる 
    "frontend-ui-ux-engineer": {
      "model": "google/antigravity-gemini-3-pro",
      "temperature": 0.4,
      "description": "UIコンポーネントの実装、CSS調整、UX改善、レスポンシブ対応を担当。"
    },

    // --------------------------------------------------------------------------
    // 3. 支援・専門家レイヤー (Support & Specialist Layer)
    // --------------------------------------------------------------------------

    // [Librarian] 情報検索・ドキュメント参照
    // 推奨: Gemini 3 Flash (Antigravity)
    // 理由: 100万トークン超のコンテキストで大量のドキュメントを安価に読み込める [4, 8]
    "librarian": {
      "model": "google/antigravity-gemini-3-flash",
      "temperature": 0.1, // 事実に基づく正確な検索のため低温度に設定
      "description": "広範なドキュメント検索、ライブラリ仕様の確認、コードベースの歴史的経緯の調査。"
    },

    // [Explorer] コードベース探索
    // 推奨: Gemini 3 Flash
    // 理由: 速度とコスト重視。grep検索結果などの大量のテキストストリームを高速処理する 
    "explore": {
      "model": "google/antigravity-gemini-3-flash",
      "temperature": 0.1
    },

    // [Oracle] 高度技術相談・アーキテクト
    // 推奨: GPT-5.2 (Thinking/xhigh)
    // 理由: 数学的・論理的知能が最高峰であり、難解なアルゴリズムやバグの原因特定に不可欠 
    "oracle": {
      "category": "ultrabrain",
      "variant": "xhigh", // 最大限の思考力を発揮させる
      "temperature": 0.5,
      "description": "難解な問題に対する深い洞察、アーキテクチャ設計、解決策の提示。"
    },

    // 品質保証・監査 (Momus)
    // 推奨: GPT-5.2 (Codex)
    // [変更点] キー名を "Momus" から "Momus (Plan Reviewer)" に更新
    "Momus (Plan Reviewer)": {
      "model": "openai/gpt-5.2-codex",
      "temperature": 0.2,
      "description": "コードレビュー、セキュリティ監査、品質チェック、エッジケースの指摘。"
    },

    // ドキュメント生成
    // 推奨: Gemini 3 Flash
    // 理由: コストパフォーマンス最強。大量のテキスト生成に適している。
    "document-writer": {
      "model": "google/antigravity-gemini-3-flash",
      "temperature": 0.3
    },

    // [Visual Analyzer] 画像・動画解析
    // 推奨: Gemini 3 Pro
    "multimodal-looker": {
      "model": "google/antigravity-gemini-3-pro",
      "temperature": 0.2
    }
  },

  // ================================================================================
  // 機能・挙動設定 (Features & Behaviors)
  // ================================================================================

  //
  // オーケストレーションの詳細設定 [5]
  "sisyphus_agent": {
    "disabled": false,
    "default_builder_enabled": false, // 標準ビルダーは無効化し、Sisyphusに一元化して混乱を防ぐ
    "planner_enabled": true,          // Prometheusプランナーを有効化し、作業前の計画を必須とする
    "replace_plan": true              // 標準のPlan機能をPrometheusで完全に置き換える
  },

  //
  // バックグラウンドタスクの並列実行設定 [3]
  // Gemini Flashなどの軽量モデルを活用し、メインスレッドをブロックせずに調査を進める
  "background_task": {
    "defaultConcurrency": 5 // 並列数を5に設定 (APIレート制限とマシンスペックに応じて調整)
  },

  //
  // コミット操作の自動化設定 
  "git_master": {
    "commit_footer": false,            // コミットログに "Ultraworked with Sisyphus" フッターを追加しない
    "include_co_authored_by": false    // 共同作成者としてAIエージェントを記録しない
  },

  //
  // 自律的な開発ループの設定 [9]
  "ralph_loop": {
    "enabled": true,
    "default_max_iterations": 50 // 無限ループを防ぐための安全装置
  }
}
